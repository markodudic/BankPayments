		        		android:layout_height="wrap_content"
		        		style="@style/ContentSectionLabelData"
			            android:text="220 EUR" />
	
			        <TextView
			            android:id="@+id/payment_data_details"
			            android:layout_width="fill_parent"
		        		android:layout_height="wrap_content"
