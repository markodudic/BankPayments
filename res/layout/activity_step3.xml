    android:background="@color/background_app"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    
        <LinearLayout
            style="@style/menu_layout"
            android:orientation="horizontal" >
        
           <Button
               android:id="@+id/menu_button_1"
               style="@style/menu_button"
               android:drawableLeft="@drawable/new_payment"
               android:text="@string/menu_button_1_text" />

		   <View 
			    android:layout_height="fill_parent"
			    style="@style/MenuBorderVertical" />
           
           <Button
			    android:id="@+id/menu_button_2"
			    style="@style/menu_button"
			    android:text="@string/menu_button_2_text"
			    android:drawableLeft="@drawable/save_as_trustie" />   
           
		   <View 
			    android:layout_height="fill_parent"
			    style="@style/MenuBorderVertical" />
           
           <Button
			    android:id="@+id/menu_button_3"
			    style="@style/menu_button"
			    android:text="@string/menu_button_3_text"
			    android:drawableLeft="@drawable/save_as_template" />   
           
		   <View 
			    android:layout_height="fill_parent"
			    style="@style/MenuBorderVertical" />
           
           <Button
