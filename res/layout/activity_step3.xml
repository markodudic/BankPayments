			        <TextView
			            android:id="@+id/system_data_payment_status"
			            android:layout_width="fill_parent"
		        		android:layout_height="wrap_content"
		        		style="@style/ContentSectionLabel"
			            android:text="@string/system_data_payment_status" />
			        
			        <TextView
			            android:id="@+id/system_data_payment_status_data"
			            android:layout_width="fill_parent"
		        		android:layout_height="wrap_content"
		        		style="@style/ContentSectionLabelData"
			            android:text="Prepared" />
	
			        <TextView
			            android:id="@+id/system_data_payment_id"
			            android:layout_width="fill_parent"
