						android:layout_weight="1" />
	
			    	<LinearLayout
				        android:layout_width="10dip"
						android:layout_height="0dip" />
				    			    					
				    <Button
				        android:id="@+id/button_pay"
				        android:layout_width="wrap_content"
				        style="@style/ButtonNext"
				        android:text="@string/button_pay"
