<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HeaderTitle"
    android:layout_width="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/HeaderTitleMenu"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

	    <ImageButton
	        android:id="@+id/imageMenu"
	        style="@style/HeaderMenuImage"
	        android:src="@drawable/menu" />
	    
        <ImageView
	        android:id="@+id/imageLogo"
	        android:layout_height="wrap_content"
        	style="@style/HeaderLogoImage"
        	android:src="@drawable/logo" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/header_title"
        style="@style/HeaderTitleText"
        android:layout_width="wrap_content"
        android:text="@string/header_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/imageStep1"
	        android:layout_height="wrap_content"
        	style="@style/HeaderStepImages"
	        android:src="@drawable/step1" />
	
	    <ImageView
	        android:id="@+id/imageStep2"
	        android:layout_height="wrap_content"
        	style="@style/HeaderStepImages"
	        android:src="@drawable/step2" />
	    
	    <ImageView
	        android:id="@+id/imageStep3"
	        android:layout_height="wrap_content"
        	style="@style/HeaderStepImages"
	        android:src="@drawable/step3" />
    </LinearLayout>
</LinearLayout>